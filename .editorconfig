# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 4 space indentation, keep trailing whitespace (MD formatting)
[*.md]
indent_size = 4
indent_style = space
trim_trailing_whitespace = false

# 4 space indentation
[*.py]
indent_size = 4
indent_style = space

[*.rst]
max_line_length = 80
indent_style = space
indent_size = 4
